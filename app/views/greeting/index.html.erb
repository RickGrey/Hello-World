<style type="text/css">
table {
	border-collapse:collapse;
	}

table,th, td {
	border: 1px solid #9A170F;
	}

th {
	background-color: #9A170F;
	color: #ffffff;
	text-align: left;
	padding: 5px 10px 5px 10px;
	}

td {
	vertical-align:top;
	}

tr:nth-child(odd) {
	background-color:#ffffff !important;

	}
tr:nth-child(even) {
	background-color:#eebbbb;
	}
</style>

