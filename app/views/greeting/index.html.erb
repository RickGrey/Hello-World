<h1>Simple <strong>Expressions</strong></h1>
<p>Tommy is <%= @age %> years old.</p>


<h1>Iteration using <i>Scriptlets</i></h1>
<% for i in 1..5 %>
  <p>Heading Number <%= i %> </p>
<% end %>

<h1><strong>Simple Table</strong></h1>

<table>
  <tr>
    <% @table["headings"].each do |head| %>
      <th align="center">
        <%= head %>
      </th>
      <% end %>
  </tr>

  <% @table["body"].each do |row| %>
    <tr>
      <% row.each do |col| %>
        <td align="center">
          <%= col %>
        </td>
      <% end %>
    </tr>
  <% end %>

  </table>